<?xml version="1.0" encoding="UTF-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:EasyTravel.Views"
       x:Class="EasyTravel.AppShell">

    <TabBar>
        <Tab Title="Home">
            <ShellContent ContentTemplate="{DataTemplate local:HomePage}" />
        </Tab>
        <Tab Title="Add Trip">
            <ShellContent ContentTemplate="{DataTemplate local:AddTripPage}" />
        </Tab>
        <Tab Title="About Us">
            <ShellContent ContentTemplate="{DataTemplate local:AboutUsPage}" />
        </Tab>
        <Tab Title="Trips List">
            <ShellContent ContentTemplate="{DataTemplate local:TripsListPage}" />
        </Tab>
        <Tab Title="Trip Details">
            <ShellContent ContentTemplate="{DataTemplate local:TripDetailsPage}" />
        </Tab>
    </TabBar>
</Shell>
